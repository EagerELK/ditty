.row
  .col-md-12
    .panel.panel-default
      %table.table.table-striped
        %thead
          %tr
            %th Name
        %tbody
          - if list.count > 0
            - list.all.each do |entity|
              %tr
                %td
                  %a{ href: "#{base_path}/#{entity.id}" }= entity.name
          - else
            %tr
              %td.text-center{ colspan: 1 } No records

=pagination(list, base_path)
